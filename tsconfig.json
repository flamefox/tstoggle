{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "sourceMap": true,
    "sourceRoot": "tssrc",
    "rootDir": "tssrc",
    "outDir": "",
    "declaration": false
  },
  "include": [
    "config",
    "tssrc/**/*.ts"
  ],
  "exclude": [
    "bin",
    "typings",
    "package",
    "node_modules",
    "**/*.spec.ts"
  ]
}